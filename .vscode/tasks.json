{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Lf.Slack.TransactionBalance.Api/Lf.Slack.TransactionBalance.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Lf.Slack.TransactionBalance.Api/Lf.Slack.TransactionBalance.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Lf.Slack.TransactionBalance.Api/Lf.Slack.TransactionBalance.Api.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build db setup",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/infrastructure/Lf.Slack.Infrastructure.Setup/Lf.Slack.Infrastructure.Setup.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
    ]
}